<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="oval">
            <gradient android:angle="135" android:endColor="@android:color/background_light" android:startColor="#1766A6" />
            <corners android:radius="40dp" />
            <stroke android:width="2dp" android:color="@android:color/black" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@android:color/background_light" android:startColor="#1766A6" />
            <corners android:radius="40dp" />
            <stroke android:width="2dp" android:color="@android:color/black" />
        </shape>

    </item>
</selector>